<UserControl x:Class="MapCreationTool.Controls.ProjectSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapCreationTool.Controls"
             xmlns:wnd="clr-namespace:MapCreationTool.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>
        <local:LabeledTextBoxControl Grid.Row="0" LabelText="Height map" TextBoxValue="{Binding Path=ViewModel.ProjectSettings.HeightMapName, RelativeSource={RelativeSource AncestorType={x:Type wnd:MainWindow }}}"></local:LabeledTextBoxControl>
        <local:LabeledTextBoxControl Grid.Row="1" LabelText="Diffuse map" TextBoxValue="{Binding Path=ViewModel.ProjectSettings.DiffuseMapName, RelativeSource={RelativeSource AncestorType={x:Type wnd:MainWindow }}}"></local:LabeledTextBoxControl>
    </Grid>
</UserControl>
