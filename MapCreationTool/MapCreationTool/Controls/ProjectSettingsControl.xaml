<UserControl x:Class="MapCreationTool.Controls.ProjectSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapCreationTool.Controls"
             xmlns:compile="clr-namespace:MapCreationTool.Controls.CompileSettings"
             xmlns:wnd="clr-namespace:MapCreationTool.Windows"
             xmlns:models="clr-namespace:MapCreationTool.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             d:DataContext="{d:DesignInstance models:ProjectSettings, IsDesignTimeCreatable=true}"
             DataContext="{Binding Path=ProjectSettings}">
    <Grid>

        <StackPanel Orientation="Vertical">
            <compile:ValueCompileSetting SettingName="Output file" SettingDescription="The output smf file to create. E.g Zero-Prime.smf (REQUIRED)" DataContext="{Binding}"
                                         SettingDialogType="Save" FileDialogFilter="smf files (*.smf)|*.smt|All files (*.*)|*.*"
                                         SettingEnabledLocked="true" SettingIsEnabled="True"  
                                         SettingValue="{Binding Path=OutSmfFilePath, Mode=TwoWay}"></compile:ValueCompileSetting>
            <compile:ValueCompileSetting SettingName="Include texture" SettingDescription="The diffuse map file to use. (REQUIRED)" DataContext="{Binding}"
                                         SettingDialogType="Open" FileDialogFilter="All files (*.*)|*.*"
                                         SettingIsEnabled="True" SettingEnabledLocked="True"
                                         SettingValue="{Binding Path=DiffuseMapName, Mode=TwoWay}" ></compile:ValueCompileSetting>
            <compile:ValueCompileSetting SettingName="Height map" SettingDescription="The height map file to use. (REQUIRED)" DataContext="{Binding}"
                                         SettingDialogType="Open" FileDialogFilter="All files (*.*)|*.*"
                                         SettingIsEnabled="True" SettingEnabledLocked="True"
                                         SettingValue="{Binding Path=HeightMapName, Mode=TwoWay}" ></compile:ValueCompileSetting>
            <compile:ValueCompileSetting SettingName="Maximum height" SettingDescription="Engine maximum height - Highest point in map" DataContext="{Binding}"
                                         SettingIsEnabled="True" SettingEnabledLocked="True"
                                         SettingValue="{Binding Path=MaxHeight, Mode=TwoWay}" ></compile:ValueCompileSetting>
            <compile:ValueCompileSetting SettingName="Minimum height" SettingDescription="Engine minimum height - Lowest point in map" DataContext="{Binding}"
                                         SettingIsEnabled="True" SettingEnabledLocked="True"
                                         SettingValue="{Binding Path=MinHeight, Mode=TwoWay}" ></compile:ValueCompileSetting>
            <compile:ValueCompileSetting SettingName="Metal map" SettingDescription="Metal map file to use. Red channel is amount of metal (OPTIONAL)"  DataContext="{Binding}"
                                         SettingDialogType="Open" FileDialogFilter="All files (*.*)|*.*"
                                         SettingIsEnabled="{Binding Path=UseMetalMap, Mode=TwoWay}" SettingEnabledLocked="False" 
                                         SettingValue="{Binding Path=MetalMapName, Mode=TwoWay}" ></compile:ValueCompileSetting>
            <compile:ValueCompileSetting SettingName="Geovent decal" SettingDescription="Texture to use for geovents. (OPTIONAL)" DataContext="{Binding}"
                                         SettingDialogType="Open" FileDialogFilter="All files (*.*)|*.*"
                                         SettingIsEnabled="{Binding Path=UseGeoventDecal, Mode=TwoWay}" SettingEnabledLocked="False"
                                         SettingValue="{Binding Path=GeoventDecalPath, Mode=TwoWay}" ></compile:ValueCompileSetting>
            <compile:ValueCompileSetting SettingName="Feature placement" SettingDescription=" " DataContext="{Binding}"
                                         SettingIsEnabled="{Binding Path=UseFeaturePlacement, Mode=TwoWay}" SettingEnabledLocked="False" 
                                         SettingValue="{Binding Path=FeaturePlacementFilePath, Mode=TwoWay}" ></compile:ValueCompileSetting>

        </StackPanel>

        <!--<Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Name="btnSave" Grid.Column="1">Save</Button>
        </Grid>-->
    </Grid>
</UserControl>
