<UserControl x:Class="MapCreationTool.Controls.CompileSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapCreationTool.Controls"
             xmlns:wpf="clr-namespace:MapCreationTool.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <wpf:BoolVisibilityConverter x:Key="boolVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"></ColumnDefinition>
            <ColumnDefinition Width="125"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <CheckBox Margin="0,10" Grid.Column="0" IsChecked="{Binding Path=SettingIsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"></CheckBox>
        <Label Margin="0,5" Grid.Column="1" Content="{Binding Path=SettingName, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Label.ToolTip>
                <ToolTip>
                    <DockPanel>
                        <!-- Binding works at runtime, but not when the map is initially loaded -->
                        <TextBlock Text="{Binding Path=SettingDescription, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:CompileSetting}}"></TextBlock>
                    </DockPanel>
                </ToolTip>
            </Label.ToolTip>
        </Label>
        <TextBox Height="25" Grid.Column="2" Text="{Binding Path=SettingValue, RelativeSource={RelativeSource AncestorType=UserControl}}"></TextBox>
        <Button Margin="5" Height="25" Grid.Column="3" Name="btnBrowseFile" Click="btnBrowseFile_Click" 
                Visibility="{Binding Path=SettingHasFileBrowser,
                    RelativeSource={RelativeSource AncestorType=UserControl},
                    Converter={StaticResource boolVisibilityConverter}}">Select</Button>
    </Grid>
</UserControl>
