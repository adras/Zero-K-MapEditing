<UserControl x:Class="MapCreationTool.Controls.StartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapCreationTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Name="gridMainPage">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Name="btnCreateMap" Grid.Column="0" Height="150" Click="btnCreateMap_Click">Create Map</Button>
            <Button Name="btnUpdateMap" Grid.Column="1" Height="150" Click="btnUpdateMap_Click">Update Map</Button>
            <Button Name="btnSizeCalculator" Grid.Column="3" Height="150" Click="btnSizeCalculator_Click">Calculate Map sizes</Button>
        </Grid>
    </Grid>
</UserControl>
