<Window x:Class="MapCreationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapCreationTool"
        xmlns:ctrl="clr-namespace:MapCreationTool.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <ctrl:StartControl></ctrl:StartControl>

            <TabControl Grid.Row="1" Name="tabMain">
                <TabItem Header="Start" Name="tabStart">
                </TabItem>
            </TabControl>
        </Grid>

    </Window.Content>
</Window>
